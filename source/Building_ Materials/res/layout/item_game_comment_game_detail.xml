<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:background="@drawable/item_list_game_guide_game_detail_selector"
        >
        <View 
            android:layout_width="match_parent"
    		android:layout_height="12dp"
            />
        <LinearLayout 
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:gravity="bottom"
            >
            <TextView 
                android:layout_width="0dp"
    			android:layout_height="wrap_content"
    			android:id="@+id/tv_username_item_game_comment_game_detail"
    			android:layout_weight="1.0"
    			android:textSize="16sp"
    			android:textColor="#000000"
    			android:gravity="left|center_vertical"
    			android:paddingLeft="12dp"
    			android:singleLine="true"
    			android:ellipsize="end"
                />
            <TextView 
                android:layout_width="0dp"
    			android:layout_height="wrap_content"
    			android:id="@+id/tv_time_item_game_comment_game_detail"
    			android:layout_weight="1.0"
    			android:textSize="12sp"
    			android:textColor="#333333"
    			android:gravity="right|center_vertical"
    			android:paddingRight="14dp"
    			android:singleLine="true"
    			android:ellipsize="end"
                />
        </LinearLayout>
        
        <View 
            android:layout_width="match_parent"
    		android:layout_height="12dp"
            />
        <TextView 
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:id="@+id/tv_content_item_game_comment_game_detail"
    			android:textSize="12sp"
    			android:textColor="#333333"
    			android:paddingLeft="12dp"
    			android:paddingRight="14dp"
                />
        
        <View 
            android:layout_width="match_parent"
    		android:layout_height="12dp"
            />
        
    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:background="@drawable/change_nickname_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="修改昵称"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333333"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_change_nickname"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/inputbox_bg_selector"
        android:hint="昵称(2-12位字母、数字或汉字)"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#999999"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="33dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_change_nickname_cancel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/mine_change_nickname_btn_bg_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#C3C3C3" />

        <TextView
            android:id="@+id/btn_change_nickname_commit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/mine_change_nickname_btn_bg_selector"
            android:gravity="center"
            android:text="提交"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
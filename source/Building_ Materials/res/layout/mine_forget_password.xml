<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/change_nickname_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/label_forget_pwd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="找回密码"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333333" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp" >

        <!-- 已绑定手机 -->

        <LinearLayout
            android:id="@+id/layout_forget_pwd_bind_phone_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已下发短信到您已绑定的手机"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/label_forget_pwd_phonenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333333"
                android:textSize="12sp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复短信即可找回密码！"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>
        <!-- 未绑定手机 -->

        <RelativeLayout
            android:id="@+id/layout_forget_pwd_unbind_phone_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/label_unbind_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的帐号未绑定手机，请拨打客服电话找回密码。"
                android:textColor="#333333"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_unbind_phone"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服电话："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/label_forget_pwd_servicenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!-- 两个按钮 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_change_nickname_commit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/mine_change_nickname_btn_bg_selector"
            android:gravity="center"
            android:text="知道了"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
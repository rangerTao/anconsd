<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_card_item_selector"
    android:orientation="vertical"
    android:paddingLeft="@dimen/shadow_padding"
    android:paddingRight="@dimen/shadow_padding"
    android:paddingTop="0dp" >

    <FrameLayout
        android:id="@+id/fl_picture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.ranger.bmaterials.ui.RoundCornerImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ad_default" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="61dp"
            android:background="@drawable/topic_banner_shade"
            android:contentDescription="@null" />
    </FrameLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fl_picture"
        android:layout_alignLeft="@+id/fl_picture"
        android:layout_alignRight="@+id/fl_picture"
        android:layout_alignTop="@+id/fl_picture"
        android:background="@drawable/classes_item_corner"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fl_picture"
        android:layout_alignTop="@+id/fl_picture"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:visibility="gone"
        android:textSize="14sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fl_picture"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:background="@color/common_divider" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:lines="2"
        android:paddingBottom="8dp"
        android:textColor="@color/topic_description"
        android:textSize="12sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <!-- title -->

    <include layout="@layout/hall_header" />

    <View
        android:id="@+id/v_none_space"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.ranger.bmaterials.view.SectionScrollView
            android:id="@+id/home_section_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <!-- ads -->
                <RelativeLayout
                    android:id="@+id/home_ad_layout"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:paddingTop="6dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp" >

                    <com.ranger.bmaterials.view.AdsViewPager
                        android:id="@+id/home_ad_ws"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ad_default" />

                    <com.ranger.bmaterials.view.AdsPoints
                        android:id="@+id/home_ad_points"
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center" />
                </RelativeLayout>

                <!-- buttons -->


                <include
                    android:id="@+id/home_section_buttons_include"
                    layout="@layout/home_section_buttons" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:text="精品游戏"
                    android:textColor="#121212"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <com.ranger.bmaterials.view.ExpandableHeightGridView
                        android:id="@+id/gv_home_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#eeeeee"
                        android:cacheColorHint="@android:color/transparent"
                        android:fadingEdge="none"
                        android:gravity="center"
                        android:horizontalSpacing="4dp"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="4"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="8dp" />

                    <RelativeLayout
                        android:id="@+id/home_grid_item_local_game_layout_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp" >

                        <!-- <include layout="@layout/home_grid_item_local_game_img_layout" /> -->
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/home_grid_item_local_game_tip_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/home_grid_item_local_game_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_poper_home_header"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="#ffffff"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </RelativeLayout>
                </RelativeLayout>
                <!-- loading -->

                <include layout="@layout/network_loading" />

                <FrameLayout
                    android:id="@+id/home_app_list_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </com.ranger.bmaterials.view.SectionScrollView>
	<TextView 
	    android:id="@+id/iv_home_rec_enter"
	    android:layout_height="48dp"
	    android:layout_width="48dp"
	    android:layout_alignParentBottom="true"
	    android:layout_marginLeft="22dp"
	    android:layout_marginBottom="30dp"
	    android:gravity="center"
	    android:text="为我\n推荐"
	    android:textSize="15sp"
	    android:textColor="#ffffff"
	    android:background="@drawable/home_rec_enter_selector"/>
        <!--<include-->
            <!--android:id="@+id/gloss_home_section_buttons_include"-->
            <!--layout="@layout/home_section_buttons" />-->
    </RelativeLayout>
</LinearLayout>
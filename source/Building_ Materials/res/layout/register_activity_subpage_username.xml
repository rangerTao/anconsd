<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" >

        <!-- 用户名注册 -->

        <LinearLayout
            android:id="@+id/layout_username_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <EditText
                android:id="@+id/edit_u_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputbox_bg_selector"
                android:hint="用户名 ( 4-14位字母或数字 )"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_u_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/inputbox_bg_selector"
                android:hint="昵称 ( 2-12位字母、数字或汉字 )"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_u_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/inputbox_bg_selector"
                android:hint="密码 ( 6-16位字母或数字 )"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp" >

                <CheckBox
                    android:id="@+id/checkbox_u_agree_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/item_checkbox_bg_selector"
                    android:text="已阅读并同意"
                    android:textColor="#999999"
                    
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/label_u_agree_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/checkbox_u_agree_protocol"
                    android:layout_toRightOf="@id/checkbox_u_agree_protocol"
                    android:text="《多酷游戏使用协议》"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/btn_u_commit_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_register_bg"
                android:enabled="false"
                android:gravity="center"
                android:text="立即注册"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
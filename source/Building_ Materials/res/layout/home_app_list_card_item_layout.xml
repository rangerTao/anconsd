<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/home_app_list_item_card_viewstub"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:background="@drawable/list_card_item_selector"
    android:minHeight="70dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" >

        <FrameLayout
            android:id="@+id/flhome_app_item_card_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp" >

            <com.ranger.bmaterials.ui.RoundCornerImageView
                android:id="@+id/home_app_item_card_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:focusable="true"
                android:visibility="invisible"
                android:src="@drawable/icon_front_shade_game_list" />
        </FrameLayout>

        <TextView
            android:id="@+id/home_app_item_card_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/flhome_app_item_card_iv"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/home_app_item_card_rating"
            style="@style/starRatingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_app_item_card_name"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/flhome_app_item_card_iv"
            android:isIndicator="true"
            android:numStars="5" />

        <com.ranger.bmaterials.view.GameLabelView
            android:id="@+id/home_app_item_card_label_name"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_below="@id/home_app_item_card_rating"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/flhome_app_item_card_iv"
            android:gravity="center"
            android:minWidth="34dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/home_app_item_card_download_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_app_item_card_rating"
            android:layout_toRightOf="@id/home_app_item_card_label_name"
            android:textColor="#666666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/home_app_item_card_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_app_item_card_rating"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/home_app_item_card_download_times"
            android:textColor="#666666"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:minWidth="35dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.ranger.bmaterials.view.CircleProgressBar
                    android:id="@+id/home_app_item_card_download_iv"
                    android:layout_width="44dp"
                    android:layout_height="44dp" />

                <TextView
                    android:id="@+id/home_app_item_card_download_pb_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/home_app_list_percent_text_color"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/home_app_item_card_download_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_home_app_list_bottom"
        android:layout_marginBottom="-3dp" >

        <TextView
            android:id="@+id/home_app_item_card_recommend_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_centerVertical="true"
            android:textColor="#8c8c8c"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>
</LinearLayout>
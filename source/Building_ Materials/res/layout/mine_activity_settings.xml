<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mine_mainview_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/item_titlebar_mine" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbarStyle="insideInset"
        android:scrollbarSize="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="14dp"
            android:paddingLeft="14dp"
            android:paddingRight="10dp"
            android:paddingTop="14dp" >

            <RelativeLayout
                android:id="@+id/settings_wifi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/mine_item_expand_head"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/wifior3g_prompting"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <com.ranger.bmaterials.ui.SettingsSwitchButton
                    android:id="@+id/settings_switch_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                android:background="#D8D8D8"/>
            <RelativeLayout
                android:id="@+id/settings_deletepkgafterinstalling"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/mine_item_expand_white_middle"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="安装后删除安装包"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <com.ranger.bmaterials.ui.SettingsSwitchButton
                    android:id="@+id/settings_switch_deletepkgafterinstalling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            
            <View android:layout_width="match_parent" android:layout_height="1dp"
                android:background="#D8D8D8"/>
            <RelativeLayout
                android:id="@+id/settings_showinstalltip"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/mine_item_expand_white_middle"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="下载后提示安装"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <com.ranger.bmaterials.ui.SettingsSwitchButton
                    android:id="@+id/settings_switch_showinstalltip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            
            <View android:layout_width="match_parent" android:layout_height="1dp"
                android:background="#D8D8D8"/>
            <RelativeLayout
                android:id="@+id/settings_installautomaticly"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/mine_item_expand_white_tail"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="下载后自动安装(需root权限)"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <com.ranger.bmaterials.ui.SettingsSwitchButton
                    android:id="@+id/settings_switch_installautomaticly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            
   

            

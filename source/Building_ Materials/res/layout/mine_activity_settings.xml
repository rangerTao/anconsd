            <RelativeLayout
                android:id="@+id/settings_clearcache"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/list_card_item_selector"
                android:padding="8dp"                
                android:layout_marginTop="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="清除图片缓存"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_trash" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/settings_recommandtofriend"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/mine_item_expand_head"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="推荐给好友"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/settings_mark" />
            </RelativeLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                android:background="#D8D8D8"/>
            <RelativeLayout
                android:id="@+id/settings_feedback"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/mine_item_expand_white_middle"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="意见反馈"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/settings_mark" />
            </RelativeLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                android:background="#D8D8D8"/>
            <RelativeLayout
                android:id="@+id/settings_checkupdate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/mine_item_expand_white_middle"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/label_check_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="检查更新"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/settings_mark"
                    android:id="@+id/checkup_setting_mask" />
                
                <ImageView
                    android:id="@+id/label_new_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/checkup_setting_mask"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/remindicon"
                    android:visibility="invisible" />
                
            </RelativeLayout>


                    android:src="@drawable/settings_mark" />
            </RelativeLayout> -->

            <View android:layout_width="match_parent" android:layout_height="1dp"
                android:background="#D8D8D8"/>
            <RelativeLayout
                android:id="@+id/settings_about"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/mine_item_expand_white_tail"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="关于"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/settings_mark" />
            </RelativeLayout>

          
            <LinearLayout
                android:id="@+id/duoku_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_card_item_selector"
                android:padding="8dp" 
                android:layout_marginTop="14dp"
                android:orientation="vertical">
				<TextView
                    android:id="@+id/recommend_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/down_more_duoku_app"
                    android:textColor="#333333"
                    android:textSize="14sp" />
                
                <HorizontalScrollView
                    android:id="@+id/recomdapp_scrol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginTop="9dp"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <GridView
                            android:id="@+id/recomdapp_gridview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cacheColorHint="#00000000"
                            android:listSelector="#00000000"
                            android:fadingEdge="none"
                            android:scrollbars="none"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"/>
                    </LinearLayout>
               </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
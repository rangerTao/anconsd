<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mine_mainview_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/item_titlebar_mine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_change_oldpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputbox_bg_selector"
                android:hint="@string/old_pwd_hint"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:password="true"
                android:textColor="#999999"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_change_newpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/inputbox_bg_selector"
                android:hint="@string/new_pwd_hint"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:password="true"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_changepwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/mine_btn_login_register_ect_bg_selector"
                android:gravity="center"
                android:text="@string/confirm_change_pwd"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8f3fe"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#196bc8"
        >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_selector"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_back"
            android:gravity="center"
            android:text="我的账户--修改密码"
            android:textColor="#fff"
            android:textSize="18sp"/>
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_change_oldpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:password="true"
                android:textColor="#999999"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_change_newpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="新密码"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:password="true"
                android:textColor="#999999"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_confirm_newpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="确认密码"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:password="true"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_changepwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="14dp"
                android:background="#2088f3"
                android:gravity="center"
                android:text="修改"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

</LinearLayout>
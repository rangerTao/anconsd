<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout style="@style/content_list_item_style_for_card" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_under_shade_game_list" />

            <ImageView
                android:id="@+id/manager_activity_updatable_list_item_icon"
                style="@style/content_list_item_imageview_style"
                android:contentDescription="@string/dumy" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_front_shade_game_list"
                android:contentDescription="@string/dumy" />
        </FrameLayout>

        <!--
         <ImageView
        android:id="@+id/manager_activity_updatable_list_item_icon"
        style="@style/content_list_item_imageview_style" />
        -->

        <LinearLayout style="@style/content_list_item_linear_layout_style" >

            <TextView
                android:id="@+id/manager_activity_updatable_list_item_name"
                style="@style/content_list_item_title_style"
                android:text="name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/manager_activity_updatable_list_item_version"
                    style="@style/content_list_item_text_style"
                    android:text="version" />

                <TextView
                    android:id="@+id/manager_activity_updatable_list_item_version_new"
                    style="@style/content_list_item_text_style"
                    android:drawableLeft="@drawable/icon_version_arrow_update_diff_msg"
                    android:text="newVersion" />
            </LinearLayout>

            <TextView
                android:id="@+id/manager_activity_updatable_list_item_size"
                style="@style/content_list_item_text_style"
                android:text="size" />
        </LinearLayout>

        <com.ranger.bmaterials.view.DontPressWithParentButton
            android:id="@+id/manager_activity_updatable_list_item_update_button"
            style="@style/content_list_item_button_style"
            android:background="@null"
            android:textColor="#448abf"
            android:textSize="16sp"
            android:layout_marginRight="6dp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="UTF-8"?>
<!-- 底部圆角 白色背景 灰色边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#C3C3C3" />
            <corners android:topLeftRadius="0.10dp" android:topRightRadius="0.10dp"
                android:bottomRightRadius="0.10dp" android:bottomLeftRadius="0.10dp" />
            
        </shape>
    </item>
    <item android:top="1dp" android:left="0dp" android:right="0dp">
        <shape>
            <solid android:color="#F0F0F0" />
            <corners android:topLeftRadius="0.10dp" android:topRightRadius="0.10dp"
                android:bottomRightRadius="0.10dp" android:bottomLeftRadius="0.10dp" />
            
        </shape>
    </item>
</layer-list>
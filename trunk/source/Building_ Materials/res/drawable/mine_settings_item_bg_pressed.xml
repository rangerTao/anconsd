<?xml version="1.0" encoding="UTF-8"?>
<!-- 底部圆角 白色背景 灰色边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#D8D8D8" />
            <corners android:topLeftRadius="0.10dp" android:topRightRadius="0.10dp"
                android:bottomRightRadius="0.10dp" android:bottomLeftRadius="0.10dp" />
            
        </shape>
    </item>
    <item android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp">
        <shape>
            <solid android:color="#D2E8F4" />
            <corners android:topLeftRadius="0.10dp" android:topRightRadius="0.10dp"
                android:bottomRightRadius="0.10dp" android:bottomLeftRadius="0.10dp" />
            
        </shape>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="20dip" />

            <padding
                android:left="10px"
                android:right="2px" />
            <gradient
                android:angle="0"
                android:centerColor="#D7D7D7"
                android:centerY="0.75"
                android:endColor="#D7D7D7"
                android:startColor="#D7D7D7" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="20dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="#458be1"
                    android:centerY="0.6"
                    android:endColor="#458be1"
                    android:startColor="#458be1" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <padding
                    android:left="1px"
                    android:right="1px" />

                <corners android:radius="20dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="#00A2D5"
                    android:centerY="0.6"
                    android:endColor="#00A2D5"
                    android:startColor="#00A2D5" />
            </shape>
        </clip>
    </item>

</layer-list>
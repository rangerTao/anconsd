<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/icon_under_shade_game_list" />

        <ImageView
            android:id="@+id/game_icon"
            style="@style/content_list_item_imageview_style"
            android:contentDescription="image" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/icon_front_shade_game_list" />
    </FrameLayout>

    <!--
         <ImageView
        android:id="@+id/game_icon"
        style="@style/content_list_item_imageview_style" />
    -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <!-- android:text="怪物猎人" -->
        <TextView
            android:id="@+id/game_name"
            style="@style/content_list_item_title_style"
             />

        <RatingBar
            android:id="@+id/game_rating"
            style="@style/starRatingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="1.0" />

        <ProgressBar
            android:id="@+id/game_download_progressbar"
            style="@style/content_list_item_progressbar_style"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:progressDrawable="@drawable/progress_horizontal_yellow"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/game_download_times"
                style="@style/content_list_item_text_style"
                android:layout_alignParentLeft="true"
 />
            <!--                 android:text="40人下载"
            android:layout_alignParentRight="true" -->

            <TextView
                android:id="@+id/game_size"
                style="@style/content_list_item_text_style"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/game_download_times"
                android:text="12M" />

            <TextView
                android:id="@+id/game_download_progress"
                style="@style/content_list_item_text_style"
                android:layout_alignParentRight="true"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.ranger.bmaterials.view.DontPressWithParentButton
            android:id="@+id/search_item_button"
            style="@style/content_list_item_button_style"
 />

        <ImageView
            android:id="@+id/search_item_comingsoon_iv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/icon_comingsoon_game_list"
            android:visibility="gone" />
    </FrameLayout>

</merge>
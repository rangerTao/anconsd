<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/item_titlebar_mine" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.ranger.bmaterials.view.pull.PullToRefreshListView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/exchange_history_list"
            style="@style/content_list"
            android:fadingEdge="none"
            android:scrollbars="none"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrHeaderTextAppearance="@style/pull_header_TextAppearance"
            ptr:ptrListViewExtrasEnabled="false"
            ptr:ptrMode="pullFromStart"
            ptr:ptrOverScroll="false"
            ptr:ptrScrollingWhileRefreshingEnabled="true"
            ptr:ptrShowIndicator="false" />

        <include
            android:id="@+id/progress_bar"
            android:layout_gravity="center"
            layout="@layout/network_loading"
            android:visibility="gone" />
        
        <include
            android:id="@+id/error_view"
            android:layout_gravity="center"
            layout="@layout/loading_error_layout"
            android:visibility="gone" />

         <TextView
             android:id="@+id/no_record_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:drawableTop="@drawable/none"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:text="@string/exchange_history_list_no_record"
        android:textColor="#999999"
        android:textSize="14sp" 
        android:visibility="gone"/>

        <include
            android:layout_gravity="center"
            layout="@layout/loading_error_layout"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>
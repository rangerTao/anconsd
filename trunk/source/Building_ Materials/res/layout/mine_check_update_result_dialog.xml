<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/change_nickname_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/label_update_pwd_title"
        android:layout_width="match_parent"
        android:layout_height="38.0dp"
        android:gravity="center"
        android:text="升级信息"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" 
        android:background="#727272"
        android:textSize="18sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:paddingLeft="21dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/label01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新版本"
            android:textAppearance="@style/check_update_itemName_TextAppearance"/>
        
        <TextView
            android:id="@+id/label_update_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.02"
            android:layout_below="@id/label01"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/check_update_itemValue_TextAppearance"/>
        
        <TextView
            android:id="@+id/label02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_update_version"
            android:layout_marginTop="14dp"
            android:text="大小"
            android:textAppearance="@style/check_update_itemName_TextAppearance"/>
        
        <TextView
            android:id="@+id/label_update_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label02"
            android:text="4.3M"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/check_update_itemValue_TextAppearance" />
        
        <TextView
            android:id="@+id/label03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_update_size"
            android:layout_marginTop="14dp"
            android:text="更新内容"
            android:textAppearance="@style/check_update_itemName_TextAppearance"/>
        
        <TextView
            android:id="@+id/label_update_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label03"
            android:layout_marginTop="8dp"
            android:text="1.解决了一些严重和小bug\n2.升级装备\n3.增加稳定性"
            android:textAppearance="@style/check_update_itemValue_TextAppearance"  
            android:scrollbars="vertical"
            android:maxLines="10"/>
    </RelativeLayout>

    <!-- 两个按钮 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_check_update_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/mine_checkupdate_btn_bg_selector"
            android:gravity="center"
            android:text="下次再说"
            android:textColor="#333333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/btn_check_update_commit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/mine_checkupdate_btn_bg_selector"
            android:gravity="center"
            android:text="马上升级"
            android:textColor="#333333"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
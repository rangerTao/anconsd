<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/hall_title"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_title_height"
    android:background="@drawable/header_bg">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/header_search_bg"
            android:contentDescription="@null"/>

        <RelativeLayout
            android:id="@+id/llHeaderSearchArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_header_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/header_title_icon"/>

            <TextSwitcher
                android:id="@+id/tv_header_titel_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toLeftOf="@+id/tv_item_title_hall"
                android:layout_toRightOf="@+id/iv_header_title_icon"
                android:gravity="center|left"
                android:textColorHint="#b9b9b9"
                android:textSize="14sp"/>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>
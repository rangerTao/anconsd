	<include layout="@layout/network_loading" android:id="@+id/layout_loading_guide"/>

    <RelativeLayout
        android:id="@+id/layout_collection_guides"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/layout_mine_guide_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.ranger.bmaterials.view.pull.PullToRefreshListView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ptr="http://schemas.android.com/apk/res-auto"
                android:id="@+id/listview_mine_collection_guides"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/icon_list_divider"
                android:dividerHeight="2px"
                ptr:ptrAnimationStyle="flip"
                ptr:ptrHeaderBackground="@android:color/transparent"
                ptr:ptrHeaderTextAppearance="@style/pull_header_TextAppearance"
                ptr:ptrMode="pullFromStart" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_mine_guide_none_pane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible" >

            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:layout_marginTop="54dp"
                android:drawableTop="@drawable/no_guide"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/no_guide"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_collection_guide_goto_gamehall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/mine_btn_login_register_ect_bg_selector"
                android:gravity="center"
                android:text="去首页"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <include
            android:id="@+id/error_hint_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            layout="@layout/loading_error_layout"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/change_nickname_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/label_update_pwd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="数量设置"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333333" />

    <RadioGroup
        android:id="@+id/radioGroup_max_downloadnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:layout_marginLeft="25dp" >

        <RadioButton
            android:id="@+id/radio01"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="1个"
            android:textColor="#333333"
            android:background="#F0F0F0"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio02"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="2个"
            android:textColor="#333333"
            android:background="#F0F0F0"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio03"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="3个"
            android:textColor="#333333"
            android:background="#F0F0F0"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio04"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="4个"
            android:textColor="#333333"
            android:background="#F0F0F0"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio05"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="5个"
            android:textColor="#333333"
            android:background="#F0F0F0"
            android:textSize="14sp" />

    </RadioGroup>

    <!-- 两个按钮 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_max_downloadnum_commit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/mine_change_nickname_btn_bg_selector"
            android:gravity="center"
            android:text="确认"
            android:textColor="#000000"
            android:textSize="14sp" />
        
                <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#C3C3C3" />

        <TextView
            android:id="@+id/btn_max_downloadnum_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/mine_change_nickname_btn_bg_selector"
            android:gravity="center"
            android:text="关闭"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
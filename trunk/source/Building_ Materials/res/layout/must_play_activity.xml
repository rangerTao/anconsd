<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mine_mainview_bg"
    android:orientation="vertical" >

    <include layout="@layout/header_back_coin_layout" />

    <LinearLayout
        android:id="@+id/layout_mine_game_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.ranger.bmaterials.view.PinnedSectionListView
            android:id="@+id/listview_must_play_games"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:listSelector="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_mine_game_none_pane"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="54dp"
            android:src="@drawable/mine_no_game" />

        <TextView
            android:id="@+id/btn_collection_game_goto_gamehall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/mine_btn_login_register_ect_bg_selector"
            android:gravity="center"
            android:text="去游戏大厅"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        android:id="@+id/layout_loading_game"
        layout="@layout/network_loading" />

	<include
        android:id="@+id/error_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        layout="@layout/loading_error_layout"
        android:visibility="gone"/>

</LinearLayout>
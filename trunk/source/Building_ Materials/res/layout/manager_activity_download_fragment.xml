<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/manager_pager"
            style="@style/manager_btn_layout_layout_style"
            android:paddingLeft="46dp"
            android:paddingRight="46dp"
            android:visibility="gone">

            <Button
                android:id="@+id/manager_download_downloadall"
                style="@style/button_style"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/tab_hall_pressed"
                android:textSize="12sp"
                android:text="全部开始" />

            <Button
                android:id="@+id/manager_download_pauseall"
                style="@style/button_style"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0px"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/tab_hall_pressed"
                android:textSize="12sp"
                android:text="全部取消" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/manager_activity_download_hint_text"
            style="@style/list_sep_layout_style_for_manager"
            android:background="#D2D2D2"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#E9E8E8" />

            <include layout="@layout/notifier_for_incremental_updates" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <com.ranger.bmaterials.view.StickyListHeadersListView
                android:id="@+id/manager_activity_download_list"
                android:overScrollMode="never"
                style="@style/content_list" />

            <View
                android:id="@+id/download_no_use"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/download_null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/download_no_use"
                android:layout_centerInParent="true"
                android:drawablePadding="16dp"
                android:drawableTop="@drawable/no_guide"
                android:gravity="center_horizontal"
                android:text="@string/hint_download_null"
                android:textColor="#999999"
                android:textSize="14sp"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/manager_download_list_progressbar"
        layout="@layout/network_loading" />

</FrameLayout>
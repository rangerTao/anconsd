<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
	    android:id="@+id/loading">
    	
	    <include 
	        layout="@layout/network_loading"
	        android:id="@+id/view_loading"/>
	    
	    <ImageView 
	        android:contentDescription="@null"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:id="@+id/view_game_not_found"
    		android:src="@drawable/icon_no_game_found_game_detail"
    		android:layout_centerHorizontal="true"
    		android:layout_centerVertical="true"
    		android:visibility="gone"/>
	    
	    <LinearLayout 
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:id="@+id/view_no_comment"
    		android:orientation="vertical"
    		android:visibility="invisible"
    		android:layout_centerHorizontal="true"
    		android:layout_centerVertical="true">
    			<ImageView 
	        		android:contentDescription="@null"
            		android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:src="@drawable/icon_no_comment_found_game_detail"
    				android:layout_gravity="center"
    				
    				/>
    		
            <TextView 
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    			android:text="@string/label_game_no_comment_game_detail_comment"
    			android:textSize="14sp"
    			android:textColor="@color/gray_words_item_pop_home" />
           
        </LinearLayout>
	    
    </RelativeLayout>
    
    <com.ranger.bmaterials.view.SimpleListView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:id="@+id/lv_game_comment_game_detail"
	    android:cacheColorHint="#00000000"
	    android:divider="@drawable/icon_list_divider"
	    android:dividerHeight="1dp"
	    android:fadingEdgeLength="0.0px"
	    android:fadingEdge="none"
	    android:overScrollMode="never"
	    android:scrollbars="none"
	    android:fastScrollEnabled="true"
	    />

</LinearLayout>
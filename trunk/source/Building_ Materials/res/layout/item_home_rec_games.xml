<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_gravity="center_horizontal">

        <com.ranger.bmaterials.ui.RoundCornerImageView
            android:id="@+id/iv_rec_games_icon"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_rec_games_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="#448bdc"
        android:textSize="12sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_rec_games_status"
        android:layout_width="50dp"
        android:layout_height="21dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_home_rec_install"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#448bdc"
        android:textSize="14sp" />

</LinearLayout>
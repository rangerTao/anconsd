<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/splash_bg"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_app_name"
              android:layout_height="55dp"
              android:layout_marginTop="70dp"
              android:textAlignment="center"
              android:textSize="55sp"
              android:layout_centerHorizontal="true"
              android:text="@string/app_name"
              android:layout_gravity="center_horizontal"
              android:textColor="#fff"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="104dp"
            android:layout_below="@+id/tv_app_name"
            android:layout_above="@+id/btn_login_weixin"
            android:id="@+id/iv_app_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:contentDescription="@null"/>

    <Button android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_above="@+id/btn_unlogin_try"
            android:text="@string/login_weixin"
            android:id="@+id/btn_login_weixin"
            android:background="@drawable/login_button_bg"
            android:drawableLeft="@drawable/icon_weixin"
            android:drawablePadding="15dp"
            android:textColor="#fff"
            android:textSize="29sp"
            android:onClick="login_enter"
            android:textAlignment="center"

            android:layout_gravity="center_horizontal"/>

    <Button android:layout_width="wrap_content"
            android:id="@+id/btn_unlogin_try"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:background="#00000000"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:lines="1"
            android:drawablePadding="9dp"
            android:text="@string/unlogin_try"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:layout_marginBottom="38dp"
            android:onClick="no_login_enter"
            android:drawableRight="@drawable/unlogin_arrow_right"/>

</RelativeLayout>